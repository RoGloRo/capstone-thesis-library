{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/workflows/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/workflows/daily-overdue-penalties",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/workflows/daily-due-today-reminders", 
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/check-due-date-reminders",
      "schedule": "0 10 * * *"
    }
  ]
}